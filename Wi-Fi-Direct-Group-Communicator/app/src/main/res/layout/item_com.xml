<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/padLightGreen"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="10dp"
    >
    <TextView
        android:id="@+id/tv_commDevice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/pureWhite"
        />
    <TextView
        android:id="@+id/tv_commDigest"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_commDevice"
        android:layout_toEndOf="@id/tv_commDevice"
        android:textColor="@color/pureWhite"

        />
    <TextView
        android:id="@+id/tv_commState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_commDevice"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textColor="@color/pureWhite"

        />
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pureWhite"
        android:layout_below="@id/tv_commDigest"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>